<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carrent.controller.RentCarController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Select Car" VBox.vgrow="ALWAYS" />

    <ComboBox fx:id="carComboBox" promptText="Select Car" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="35.0" />
        </VBox.margin>
    </ComboBox>

    <Label text="Rental Period" VBox.vgrow="ALWAYS" />
    <DatePicker fx:id="startDatePicker" promptText="Start Date" />
    <DatePicker fx:id="endDatePicker" promptText="End Date" />

    <Button onAction="#handleRentCar" text="Rent Car" VBox.vgrow="ALWAYS" />

    <Label fx:id="errorLabel" text="" textFill="red" wrapText="true" VBox.vgrow="ALWAYS" /> <!-- New label for errors -->

</VBox>
